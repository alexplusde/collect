# https://EditorConfig.org

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{css,html,js,json,php,sql}]
indent_style = tab

[*.{markdown,md}]
indent_size = 4
indent_style = space
max_line_length = off
trim_trailing_whitespace = false

[*.{yaml,yml}]
indent_size = 2
indent_style = space
